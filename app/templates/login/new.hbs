{{#if errorMessage}}
  <div class="alert alert-danger">
    <p>
      <strong>Login failed:</strong> {{errorMessage}}
    </p>
  </div>
{{/if}}

<form {{action 'authenticate' on='submit'}}>
  <div class="form-group">
    {{input value=identification placeholder='Email' class="form-control input-lg" required="required"}}
  </div>

  <div class="form-group">
    {{input value=password placeholder='Password' type='password' class="form-control input-lg" required="required"}}
  </div>

  <div class="form-group">
    <input type="submit" value="Login" class="btn btn-primary btn-lg" />
    {{#link-to 'application' class="btn btn-default btn-lg" active=false}}
      Cancel
    {{/link-to}}
  </div>
</form>